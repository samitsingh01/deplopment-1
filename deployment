version: '3.8'

services:
  # MySQL Database
  mysql:
    image: mysql:8.0
    container_name: ai-chat-mysql
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: root_password_change_me
      MYSQL_DATABASE: bedrock_chat
      MYSQL_USER: bedrock_user
      MYSQL_PASSWORD: bedrock_password_change_me
    volumes:
      - mysql_data:/var/lib/mysql
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    ports:
      - "3306:3306"
    networks:
      - ai-chat-network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      timeout: 20s
      retries: 10

  # File Service
  file-service:
    image: samitsinghhh/ai-chat-file-service:latest
    container_name: ai-chat-file-service
    restart: unless-stopped
    environment:
      DATABASE_URL: mysql://bedrock_user:bedrock_password_change_me@mysql:3306/bedrock_chat
      UPLOAD_DIR: /app/uploads
    volumes:
      - file_uploads:/app/uploads
    ports:
      - "7000:7000"
    networks:
      - ai-chat-network
    depends_on:
      mysql:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:7000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Bedrock Service (AI Processing)
  bedrock-service:
    image: samitsinghhh/ai-chat-bedrock-service:latest
    container_name: ai-chat-bedrock-service
    restart: unless-stopped
    environment:
      # AWS Bedrock Configuration - REQUIRED
      AWS_ACCESS_KEY_ID: ${AWS_ACCESS_KEY_ID}
      AWS_SECRET_ACCESS_KEY: ${AWS_SECRET_ACCESS_KEY}
      AWS_REGION: ${AWS_REGION:-us-east-1}
      AWS_SESSION_TOKEN: ${AWS_SESSION_TOKEN:-}
    ports:
      - "9000:9000"
    networks:
      - ai-chat-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # API Gateway
  api-gateway:
    image: samitsinghhh/ai-chat-api-gateway:latest
    container_name: ai-chat-api-gateway
    restart: unless-stopped
    environment:
      DATABASE_URL: mysql://bedrock_user:bedrock_password_change_me@mysql:3306/bedrock_chat
      BEDROCK_SERVICE_URL: http://bedrock-service:9000
      FILE_SERVICE_URL: http://file-service:7000
    ports:
      - "8000:8000"
    networks:
      - ai-chat-network
    depends_on:
      mysql:
        condition: service_healthy
      file-service:
        condition: service_healthy
      bedrock-service:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Frontend (React + Nginx)
  frontend:
    image: samitsinghhh/ai-chat-frontend:latest
    container_name: ai-chat-frontend
    restart: unless-stopped
    ports:
      - "3000:3000"
    networks:
      - ai-chat-network
    depends_on:
      api-gateway:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  mysql_data:
    name: ai_chat_mysql_data
  file_uploads:
    name: ai_chat_file_uploads

networks:
  ai-chat-network:
    name: ai-chat-network
    driver: bridge
